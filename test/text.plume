\-- Test 'Simple text'
Hello world!
\-- Result
Hello world!
\-- End

\-- Test 'Several lines'
Hello! 

...world!
\-- Result
Hello! 
...world!
\-- End

\-- Test 'Comment 1'
Hello...\--world!

\-- Result
Hello...
\-- End

\-- Test 'Comment 2'
Hello...\-- It is a comment
world!
\-- Result
Hello...world!
\-- End

\-- Test 'Space mode - no_spaces 1'
\set_space_mode no_spaces
Foo!
    Bar!
\-- Result
Foo!Bar!
\-- End

\-- Test 'Space mode - no_spaces 2'
\set_space_mode no_spaces
Foo!             Bar!
\-- Result
Foo!Bar!
\-- End

\-- Test 'Space mode - no_spaces 3'
\set_space_mode no_spaces
Foo!{\n}Bar!
\-- Result
Foo!
Bar!
\-- End

\-- Test 'Space mode - no_spaces 4'
\set_space_mode no_spaces
Foo!{\n[3]}
Bar!
\-- Result
Foo!


Bar!
\-- End

\-- Test 'Space mode - light'
\set_space_mode light\--
Foo!


Bar!
\-- Result
Foo!
Bar!
\-- End

\-- Test 'No need to escape "[]" outside of macro call'
[]
\-- Result
[]
\-- End