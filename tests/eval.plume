    function foo()
        bar()
    end
    function bar ()
        baz ()
    end
}

${foo()}
\-- Error Lua 5.1 Lua jit
File 'string', line 6 : (lua error) attempt to call global 'baz' (a nil value)
    baz ()
    ^^^^^^
Traceback :
    File 'string', line 3 : bar()
                            ^^^^^
    File 'string', line 10 : ${foo()}
                              ^^^^^^^
\-- End

