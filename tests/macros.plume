\-- Test 'simple macro 1'
\macro foo bar\foo
\-- Result
bar
\-- End

\-- Test 'simple macro 2'
\macro foo {bar bar}\foo
\-- Result
bar bar
\-- End

\-- Test 'macro with simpleparams'
\macro double[x] {$x $x}\double{foo}
\-- Result
foo foo
\-- End

\-- Test 'macro with simple params 1'
\macro add[x y] {$x+$y}\add{1}{2}
\-- Result
1+2
\-- End

\-- Test 'macro with simple params 2'
\macro add[x:number y:number] ${x+y}\add{1}{2}
\-- Result
3
\-- End

\-- Test 'macro params are local'
\macro foo[x]{This is x:$x\n}
${x = 0}
This is x:$x\n
\foo{5}
This is x:$x
\-- Result
This is x:0
This is x:5
This is x:0
\-- End

\-- Test 'macro with useless spaces'
\macro foo[

]{bar}
\-- Result

\-- End

\-- Test 'local macro'
\macro foo{
    \lmacro foo barbar
    \foo
}\foo
\-- Result
barbar
\-- End

\-- Test 'Macro message'
\macro foo{
    ${__message.sender} : ${__message.content}\n
    ${__message.send = "bar"}
}
\foo
\foo
\-- Result
\macro : 
\foo : bar

\-- End