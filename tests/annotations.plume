\-- Test 'Annotation: string'
\macro foo[x:string] {
    ${type(x)}
}
\foo bar
\-- Result
string
\-- End

\-- Test 'Annotation: number 1'
\macro foo[x:number] {
    ${type(x)}
}
\foo 52
\-- Result
number
\-- End

\-- Test 'Annotation: number 2'
\macro foo[x:number] {
    ${type(x)}
}
\foo bar
\-- Result
nil
\-- End

\-- Test 'Annotation: ref'
\macro foo[x:ref] {
    ${x:render()}
}
\foo bar
\-- Result
bar
\-- End

\-- Test 'Annotation: default (string)'
\macro foo[x] {
    ${type(x)}
}
\foo bar
\-- Result
string
\-- End

\-- Test 'Annotation: set default'
\lconfig default_annotation ref
\macro foo[x] {
    ${type(x)}
}
\foo bar
\-- Result
table
\-- End

\-- Test 'Annotation: user'
${
    function braced (x)
        return "(" .. x:render() .. ")"
    end
}
\macro foo[x:braced] {
    $x
}
\foo bar
\-- Result
(bar)
\-- End

\-- Test 'Annotation on optionnal'
\macro foo[x:number=1] {
    ${type(x)}
}
\foo\n
\foo[x=bar]
\-- Result
number
nil
\-- End

\-- Test 'Multiples annotations'
\macro foo[x:string y:number=1] {
    ${type(x)}:${type(y)}
}
\foo bar
\-- Result
string:number
\-- End

\-- Test 'Unknow annotation'
\macro foo[x:candy=pink] {}
\foo
